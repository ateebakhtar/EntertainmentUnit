        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:onClick="openshow"
